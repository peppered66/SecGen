<?xml version="1.0"?>

<scenario xmlns="http://www.github/cliffe/SecGen/scenario"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.github/cliffe/SecGen/scenario">

  <name>RedisDB test: Kali + Debian 12 KDE</name>
  <author>William Smith</author>
  <description>
    Provisions a Kali attacker VM and a Debian 12 KDE target VM with the redisdb vulnerability module applied.
  </description>

  <type>ctf</type>
  <difficulty>easy</difficulty>

  <!-- Attacker VM -->
  <system>
    <system_name>attack_vm</system_name>
    <base distro="Kali" name="MSF"/>

    <!-- Installs redis tools on attacker vm -->

    <utility module_path=".*redis_tools.*"/>


    <utility module_path=".*/parameterised_accounts">
      <input into="accounts">
        <value>{"username":"kali","password":"kali","super_user":"true","strings_to_leak":[],"leaked_filenames":[]}</value>
      </input>
    </utility>

    <!-- Shared IP list (same pattern as wp_3x template) -->
    <input into_datastore="IP_addresses">
      <value>172.16.0.2</value> <!-- attacker -->
      <value>172.16.0.3</value> <!-- target -->
    </input>
    
    <network type="private_network">
      <input into="IP_address">
        <datastore access="0">IP_addresses</datastore>
      </input>
    </network>
  </system>

  <!-- Target VM -->
  <system>
    <system_name>target_vm</system_name>
    <base distro="Debian 12" type="desktop" name="KDE"/>

      <!-- provision test account -->
    <utility module_path=".*/parameterised_accounts">
      <input into="accounts">
        <value>{"username":"test","password":"tiaspbiqe2r","super_user":"true","strings_to_leak":[],"leaked_filenames":[]}</value>
      </input>
    </utility>


 
    <!-- Vulnerability module -->
    <vulnerability module_path=".*redisdb.*">
      <input into="strings_to_leak">
        <generator type="flag_generator"/>
      </input>

      <!-- Puppet needs two filenames: [0] and [1] -->
      <input into="leaked_filenames">
        <value>file1</value>
        <value>file2</value>
      </input>

      <!-- Optional, but follows the wordpress template pattern -->
      <input into="IP_address">
        <datastore access="1">IP_addresses</datastore>
      </input>
    </vulnerability>

    <network type="private_network">
      <input into="IP_address">
        <datastore access="1">IP_addresses</datastore>
      </input>
    </network>
  </system>

</scenario>
